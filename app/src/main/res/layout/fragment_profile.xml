<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyBg2"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_edit_24"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/prof_img_id"
        app:srcCompat="@drawable/ic_nav_profile"
        android:contentDescription="@string/profile" />


    <TextView
        android:id="@+id/textProfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/full_name"
        android:textColor="@color/textColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        tools:ignore="LabelFor"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textProfPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textProfEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor"
        android:hint="xyz@email.com"
        android:textColorHint="@color/hintColor"/>

    <TextView
        android:id="@+id/editTextTextPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor"
        android:hint="Home/Office/Friend's\nAddress Line 1\nAddress Line 2"
        android:textColorHint="@color/hintColor"/>

