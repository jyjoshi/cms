<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyBg2"
    tools:context=".activities.EditProfile">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/prof_img_id"
        app:srcCompat="@drawable/ic_nav_profile"
        android:contentDescription="@string/profile" />

    <EditText
        android:id="@+id/editTextProfFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor"
        android:hint="First Name"
        android:textColorHint="@color/hintColor"/>


    <EditText
        android:id="@+id/editTextProfLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/textColor"
        android:textColorHint="@color/hintColor"
        android:textSize="20sp"
        tools:ignore="LabelFor" />

    <TextView
        android:editable="false"
        android:id="@+id/editTextProfPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor"
        android:hint="Phone Number"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/editTextProfEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor"
        android:hint="xyz@email.com"
        android:textColorHint="@color/hintColor"/>

    <EditText
        android:id="@+id/editTextPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColor"
        android:inputType="textPostalAddress"
        android:paddingStart="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:layout_marginRight="8dp"
        android:drawablePadding="20dp"
        tools:ignore="LabelFor"
        android:hint="Home/Office/Friend's\nAddress Line 1\nAddress Line 2"
        android:textColorHint="@color/hintColor"/>

    <Button
        android:id="@+id/saveBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="48dp"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimary"
        android:text="Save"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="14sp"
        />


</LinearLayout>